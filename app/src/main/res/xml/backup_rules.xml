<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Include the SharedPreferences file where settings and tiers are stored -->
    <include domain="sharedpref" path="TikTapRemoteSettings.xml" />

    <!-- Include the Room Database where profiles are stored -->
    <!-- Note: Room databases often have -wal and -shm files, so we include the root name to capture them all if possible,
         or specify them explicitly. The wildcards here ensure we get the db and its auxiliary files. -->
    <include domain="database" path="tik_tap_remote_database" />
    <include domain="database" path="tik_tap_remote_database-wal" />
    <include domain="database" path="tik_tap_remote_database-shm" />
</full-backup-content>